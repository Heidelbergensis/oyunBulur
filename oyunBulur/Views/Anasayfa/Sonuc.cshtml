@model IEnumerable<oyunBulur.Models.Oyun>
@{
    ViewBag.Title = "Sonuc";
    Layout = null;
}






<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Listelenenler</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://www.vhv.rs/dpng/d/440-4408153_red-dead-redemption-png-image-red-dead-redemption.png"
          type="image/x-icon">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>



    @*Marka ve Slogan bölümü.*@

    <div class="slogan">
        <a href='@Url.Action("AramaIndex", "Anasayfa")'>
            <h1 class="name">
                OYUNBULUR
            </h1>

            <h2 class="slogan-content">
                Oyun mu arıyorsun? Oyunbulur.
            </h2>
        </a>
    </div>
    <div class="underline">
        <div class="testbtn2">
            @*Navigasyon butonları.*@

            <a href='@Url.Action("Index", "TestSayfasi")' class="a" type="button">TEST</a>
        </div>
        <div class="contactbtn">

            <a href='@Url.Action("Index", "ContactSayfasi")' class="b" type="button">İLETİŞİM</a>
        </div>
        <div class="suggestbtn">

            <a href='@Url.Action("Index", "OneriSayfasi")' class="c" type="button">ÖNERİ</a>
        </div>

    </div>
    @*Sayfa Müziği'ni başlatma-durdurma scripti.*@
    <script>
        function Play() {
            var myVideo = document.getElementById("Video1");
            if (myVideo.paused) {
                myVideo.play();
                document.getElementById("play").innerHTML = "Pause";
            }
            else {
                myVideo.pause();
                document.getElementById("Pause").innerHTML = "Play";
            }
        }
    </script>


    <div class="topmenu">

        @*Müzik kontrol butonu.*@

        <div class="sound">

            <img src="~/img/playicon2.png" style="width: 40px; height: 40px; position: absolute; left: 51%; top: 1%" onClick="Play()">
            <video width="0" height="0" id="Video1">
                <source src="~/img/music.mp3">
                <source src="~/img/music.mp3">
            </video>
        </div>

    </div>

    <div class="listelayer0"></div>
    <div class="listelayer0x">
         @*Tablo yapısı.*@
        <table style="position:absolute; margin-left:15px; margin-top:15px;">

            <tr>
                <th>
                    <label>Fotoğraf &nbsp&nbsp&nbsp</label><br><br><br>
                </th>

                <th>
                    <label>&nbsp&nbsp&nbspOyun Adı</label><br><br><br><br>
                </th>

                <th>
                    <label>&nbsp&nbsp&nbspOyunun Açıklaması</label><br><br><br><br>
                </th>

            </tr>
                @*Foreach döngüsü ile modelden istenilen verileri listeleme.*@
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        <a class="alink" href="@item.pagePath">
                            <img src="@item.imgPath" class="img-fluid" style="position:absolute; width:20px; height:20px;" /> <br><br><br><br>

                    </td>

                    @Html.HiddenFor(modelItem => item.OyunID)
                    <td>
                        <a class="alink" href="@item.pagePath">
                            @Html.DisplayFor(modelItem => item.OyunAdi)<br><br><br><br>
                        </a>
                    </td>
                    <td>
                        <a class="alink" href="@item.pagePath">
                            @Html.DisplayFor(modelItem => item.OyunAciklama)<br><br><br><br>
                        </a>
                    </td>
                </tr>

            }


        </table>
    </div>


</body>
</html>
